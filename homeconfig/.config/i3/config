set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (c) reload config, (p) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id xlock force, mode "default"
    bindsym e exec bash -c "loginctl terminate-session $(loginctl show-seat seat0 -p ActiveSession | cut -d = -f 2)", mode "default"
    bindsym c reload, mode "default"
    bindsym s exec xlock force; exec systemctl suspend, mode "default"
    bindsym h exec xlock force; exec systemctl hybrid-sleep, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+s mode "$mode_system"

set $mode_workspace Workspace Management (r) Rename, (Left/Right) Move screen
mode "$mode_workspace" {
    bindsym r exec --no-startup-id i3-input -F 'rename workspace to "%s"' -P 'New name: ', mode "default"
    
    bindsym Right move workspace to output right, mode "default"
    bindsym Left move workspace to output left, mode "default"
    # switch back on Escape or Enter
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+t mode "$mode_workspace"

bindsym $mod+u [urgent=latest] focus

# kodi control
set $mode_kodi (r) Toggle Remote, (x) Switch VT, (s) Sleep, (w) Wakeup
mode "$mode_kodi" {
    bindsym r exec xbmcmote kb, mode "default"
    bindsym x exec xbmcmote x, mode "default"
    bindsym w exec xbmcmote w, mode "default"
    bindsym s exec xbmcmote s, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+z mode "$mode_kodi"

# audio control
set $mode_audio (t) Toggle headset mode (0) mute (+) volume up (-) volume down (m) Toggle mic mute
mode "$mode_audio" {
    bindsym t exec bluehead toggle, mode "default"
    bindsym m exec bluehead mictoggle, mode "default"
    bindsym minus exec mediakeys -k 114
    bindsym plus exec mediakeys -k 115
    bindsym up exec mediakeys -k 115
    bindsym down exec mediakeys -k 114

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+a mode "$mode_audio"

