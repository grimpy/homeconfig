#!/bin/bash
command=$1

function mpris() {
    c=""
    case $command in
        "Next" ) c="next" ;;
        "Prev" ) c="previous" ;;
        "PlayPause") c="play-pause" ;;
        *) return 1;
   esac
   playerctl "$c"

}

function xbmc() {
    c=""
    case $command in
        "Next" ) c="-f" ;;
        "Prev" ) c="-r" ;;
        "PlayPause") c=" " ;;
        *) return 1;
   esac
   kodiremote -k "$c"

}

function praghac() {
    c=""
    case $command in
        "Next" ) c="-n" ;;
        "Prev" ) c="-r" ;;
        "PlayPause") c="-t" ;;
        *) return 1;
   esac
   pragha "$c"
}


function mpc() {
    c=""
    case $command in
        "Next" ) c="next" ;;
        "Prev" ) c="previous" ;;
        "Pause") c="pause" ;;
        "PlayPause") c="toggle" ;;
        *) return 1;
   esac
   /usr/bin/mpc "$c"

}

if playerctl status; then
    mpris
elif ps -eaf | grep -v grep | grep kodiremote; then
    xbmc
elif ps -eaf | grep -v grep | grep pragha; then
    praghac
else
    mpc
fi
