#!/usr/bin/python2
import json
import subprocess
import os
import sys

tag = str(sys.argv[1])
cmd = sys.argv[2]

proc = subprocess.Popen(['i3-msg', '-t', 'get_workspaces'], stdout=subprocess.PIPE)
workspaces = json.load(proc.stdout)
for workspace in workspaces:
    if workspace['name'].encode('utf8') == tag:
        subprocess.Popen(['i3-msg', 'workspace', tag])
        sys.exit(0)

subprocess.Popen(['i3-msg', 'workspace', tag])
os.execl(cmd, cmd)
