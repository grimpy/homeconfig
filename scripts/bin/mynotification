#!/bin/bash
NAME=$(basename $0)
statedir=/tmp/$NAME
lockfile=$statedir/lock
mkdir -p $statedir

if [ "$1" == 'off' ];then
    rm $lockfile
    exit 0
fi

function setled() {
    action=$1
    files="$(find /sys/class/leds/ -name '*scrolllock')"
    files="$files $(find /sys/class/leds/ -name '*kbd_backlight')"
    files="$files $(find /sys/class/leds/ -name '*power')"
    for file in $files; do
        if [ $action == 'on' ]; then
            max=$(cat $file/max_brightness)
            echo $max >  $file/brightness
        elif [ $action == 'off' ]; then
            echo 0 > $file/brightness
        elif [ $action == 'store' ]; then
            cp $file/brightness "$statedir/$(basename $file)"
        elif [ $action == 'restore' ]; then
            cat "$statedir/$(basename $file)" > $file/brightness
        fi
    done
}

if [ ! -e $lockfile ];then
	touch $lockfile
    setled store
	while [ -e $lockfile ]; do
        setled on
		/bin/sleep 1
        setled off
		/bin/sleep 1
	done
    setled restore
fi
