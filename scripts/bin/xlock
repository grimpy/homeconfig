#!/bin/bash
CONFIG=~/.config/xautolock
option=$1

function lock() {
    echo "KILLAGENT" | gpg-connect-agent
    if [ -n "$WAYLAND_DISPLAY" ]; then
        swaylock -c 333333aa -F -f
    else
        pylock -c 333333 --indicator -k -m --bar-indicator --timecolor=0080ffff --datecolor=00ccffff --bar-orientation=vertical
    fi
}

case $option in
    enable)
        touch $CONFIG
        ;;
    disable)
        rm $CONFIG
        ;;
    force)
        lock
        ;;
    toggle)
        if [ -e "$CONFIG" ]; then
            rm $CONFIG
            echo "DISABLED"
        else
            touch $CONFIG
            echo "ENABLED"
        fi
        ;;
    *)
        if [ -e "$CONFIG" ]; then
            lock
        fi
        ;;
esac
